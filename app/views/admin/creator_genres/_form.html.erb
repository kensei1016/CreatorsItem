
<%= form_for [:admin, @creator_genre] do |f| %>
  <div class="form-group">
    <%= f.label "ジャンル名", class: "control-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    <%= render partial: "layouts/error_message", locals: {resource: @creator_genre, attr: :name} %>
  </div>

  <div class="form-group">
    <%= f.label "ジャンル名（英語）", class: "control-label" %>
    <%= f.text_field :name_en, autocomplete: "name_en", class:"form-control" %>
    <%= render partial: "layouts/error_message", locals: {resource: @creator_genre, attr: :name_en} %>
  </div>

  <div class="form-group">
    <%= f.label "画像", class: "control-label" %>
    <%= f.attachment_field :genre_image, class: "form-control" %>
    <%= render partial: "layouts/error_message", locals: {resource: @creator_genre, attr: :genre_image} %>
  </div>

  <div class="form-group">
    <%= f.label "画像（アイコン）", class: "control-label" %>
    <%= f.attachment_field :genre_icon_image, class: "form-control" %>
    <%= render partial: "layouts/error_message", locals: {resource: @creator_genre, attr: :genre_icon_image} %>
  </div>

  <div class="form-group">
    <%= f.submit "登録", class:"btn btn-success form-control" %>
  </div>
<% end %>
