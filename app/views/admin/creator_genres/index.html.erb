<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row justify-content-center">
    <div class="col-8">
      <h2>クリエイタージャンル一覧</h2>
      <%= link_to '新規', new_admin_creator_genre_path, class: "btn btn-primary" %>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th>ジャンル名（英語）</th>
            <th>アイコン</th>          
            <th>画像</th>
            <th></th>       
            <th></th>       
          </tr>
        </thead>
        <tbody>
          <% @creator_genres.each do |creator_genre| %>
          <tr> 
            <td><%= creator_genre.name %></td>
            <td><%= creator_genre.name_en %></td>
            <td><%= attachment_image_tag creator_genre, :genre_icon_image, :fill, 40, 40 %></td>
            <td><%= attachment_image_tag creator_genre, :genre_image, :fill, 40, 40 %></td>
            <td><%= link_to '編集', edit_admin_creator_genre_path(creator_genre), class: "btn btn-primary" %></td>
            <td><%= link_to '削除', admin_creator_genre_path(creator_genre), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>