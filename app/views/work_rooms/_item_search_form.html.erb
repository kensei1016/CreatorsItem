<%= form_with url: search_api_work_rooms_path do |f| %>
  <div class="form-group">
    <%= label_tag '検索ワード' %>
    <%= text_field_tag :search_work, '', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag '検索サイト' %>
    <%= radio_button_tag :search_site_name, "楽天", checked: true %>
    <%= f.label(:search_site_name, "楽天") %>
    <%= radio_button_tag :search_site_name, "サウンドハウス" %>
    <%= f.label(:search_site_name, "サウンドハウス") %>
  </div>

  <%= link_to '検索', search_api_work_rooms_path, class:"btn btn-primary w-100" %>
<% end %>